<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.rengwuxian.materialedittext.MaterialEditText xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/et_ipv4_source"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="IPv4 Source"
        android:inputType="text"
        android:digits="0123456789./"
        app:met_floatingLabel="highlight"
        app:met_baseColor="@color/colorPrimaryDark"
        app:met_primaryColor="@color/colorPrimary"
        app:met_errorColor="@color/red"
        app:met_singleLineEllipsis="true" />
    <ImageView
        android:id="@+id/iv_delete"
        android:padding="10dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_delete_forever_gray_24dp"
        android:foreground="?android:attr/selectableItemBackground"/>
</LinearLayout>
